<Window x:Class="ProjectDesk.DeskView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectDesk" xmlns:viewmodels="clr-namespace:ProjectDesk.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:DeskViewModel}"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Height="450" Width="800"
        Title="Project Desk"  
        WindowStyle="None"
        AllowsTransparency="True"
        WindowState="Maximized"
        >
    <Window.Resources>
        <Style x:Key="titleStyle" TargetType="Run">
            <Setter Property="FontWeight" Value="ExtraBold"></Setter>
            <Setter Property="FontStretch" Value="Condensed"></Setter>
            <Setter Property="FontSize" Value="24"></Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.Resources>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="140"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <DockPanel 
                Grid.Column="0" 
                Background="AntiqueWhite"
                >
            </DockPanel>
            <DockPanel
                Grid.Column="0"
                Grid.ColumnSpan="3"
                >
                <!--Background="Aquamarine"-->
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Run Style="{StaticResource titleStyle}" Foreground="#00FF00">R</Run>
                    <Run Style="{StaticResource titleStyle}" Foreground="#FF0000">E</Run>
                    <Run Style="{StaticResource titleStyle}" Foreground="#0000FF">L</Run>
                    <Run Style="{StaticResource titleStyle}" Foreground="#00FFFF">I</Run>
                    <Run Style="{StaticResource titleStyle}" Foreground="#FFFF00">A</Run>
                    <Run Style="{StaticResource titleStyle}" Foreground="#FF00FF">B</Run>
                    <Run Style="{StaticResource titleStyle}" Foreground="#0FFF0F">I</Run>
                    <Run Style="{StaticResource titleStyle}" Foreground="#0FFFF0">L</Run>
                    <Run Style="{StaticResource titleStyle}" Foreground="#F0000F">I</Run>
                    <Run Style="{StaticResource titleStyle}" Foreground="#0F00F0">T</Run>
                    <Run Style="{StaticResource titleStyle}" Foreground="#FF0F0F">Y</Run>
                    <Run Style="{StaticResource titleStyle}" Foreground="#00FFFF"> </Run>
                    <Run Style="{StaticResource titleStyle}" Foreground="#000000">D</Run>
                    <Run Style="{StaticResource titleStyle}" Foreground="#FF00F0">E</Run>
                    <Run Style="{StaticResource titleStyle}" Foreground="#F00000">S</Run>
                    <Run Style="{StaticResource titleStyle}" Foreground="#000F00">K</Run>

                </TextBlock>
            </DockPanel>
            <StackPanel
                Grid.Column="2"
                Background="Bisque"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                >
                <Button Content="-" Width="40"></Button>
                <Button Content="O" Width="40"></Button>
                <Button Content="X" Width="40"></Button>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">
        </Grid>
        <Grid Grid.Row="2" Margin="10 0">
            <StackPanel Orientation="Vertical">
                <Expander ExpandDirection="Down"
                          IsExpanded="{Binding ProjectExpand,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                          >
                    <Expander.Header>
                        Project
                    </Expander.Header>
                    <DockPanel>
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top"
                                    Margin="0 5 0 10"
                                    >
                            <Button>Open</Button>
                            <Button>New</Button>
                            <Button>Delete</Button>
                        </StackPanel>
                        <DataGrid
                            Margin=" 0 0 0 10"
                            DockPanel.Dock="Bottom"
                            AutoGenerateColumns="False"
                            CanUserAddRows="False"
                            CanUserReorderColumns="False"
                            CanUserSortColumns="True"
                            >
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Name"></DataGridTextColumn>
                                <DataGridTextColumn Header="Reliability"></DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </DockPanel>
                </Expander>
                <Expander ExpandDirection="Down"
                          IsExpanded="{Binding DiagramExpand, UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                          >
                    <Expander.Header>
                        Diagram
                    </Expander.Header>
                    <DockPanel>
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top"
                                    Margin="0 5 0 10"
                                    >
                            <Button>Open</Button>
                            <Button>New</Button>
                            <Button>Delete</Button>
                        </StackPanel>
                        <DataGrid
                            Margin=" 0 0 0 10"
                            DockPanel.Dock="Bottom"
                            AutoGenerateColumns="False"
                            CanUserAddRows="False"
                            CanUserReorderColumns="False"
                            CanUserSortColumns="True"
                            >
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Name"></DataGridTextColumn>
                                <DataGridTextColumn Header="Reliability"></DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </DockPanel>
                </Expander>
                <Expander ExpandDirection="Down"
                          IsExpanded="{Binding ConfigurationExpand,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                          >
                    <Expander.Header>
                        Configuration
                    </Expander.Header>
                    <DockPanel>
                        <TextBlock>"This is text Block</TextBlock>
                        <!--<ProperyEditor></ProperyEditor>-->
                    </DockPanel>
                </Expander>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="3" Background="Beige" 
              HorizontalAlignment="Left" 
              VerticalAlignment="Center"                            
              >
            <Label                 
                Style="{StaticResource  StatusBarLabel}"
                Content="this will be the status bar"
                ></Label>
        </Grid>
    </Grid>
</Window>
