<Window x:Class="mainApp.Views.DiagramInputPropery"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mainApp.Views"
        mc:Ignorable="d"
        Title="DiagramInputPropery" Height="450" Width="450"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Orientation="Vertical" Width="200">
            <Label HorizontalAlignment="Center" VerticalAlignment="Center"
               Content="{Binding UnitName}"
               Margin="10"
               FontSize="48"
               FontWeight="Bold"
               >
            </Label>
            <ComboBox x:Name="comboselect"
                >
            </ComboBox>
            <StackPanel Orientation="Horizontal">
                <Label Content="Quantity"
                       >                    
                </Label>
                <TextBox x:Name="qTotal" Text="{Binding Quantity}"></TextBox><Label Content="Quantity"
                       >                    
                </Label>
                <TextBox x:Name="qRequired" Text="{Binding QuantityRequired}"></TextBox>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
