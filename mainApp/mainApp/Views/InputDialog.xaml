<Window x:Class="mainApp.Views.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mainApp.Views"
        mc:Ignorable="d"
        Title="InputDialog" Height="130" Width="350"
        WindowStartupLocation="CenterScreen"
        >
    <Grid
         Background="#eeeee4">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <Label HorizontalAlignment="Left" Content="Enter the Input:" FontWeight="DemiBold" Margin="0 0" Padding="0 5"></Label>
            <Border BorderBrush="Black" BorderThickness="1" Margin="0 5">

                <TextBox HorizontalAlignment="Left" VerticalAlignment="Center"
                       Background="White"                       
                       Width="300"    
                       x:Name="NewText"     
                       IsEnabled="True"                           
                       ></TextBox>
            </Border>
                <StackPanel  Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="OK"
                            Width="60"
                            Padding="5 0"
                            Margin="30 10"
                            Click="Button_Click"
                            >
                    </Button>
                    <Button Content="Cancel"
                            Width="60"
                            Padding="5 0"
                            Margin="30 10"
                            Click="Button_Click_1"
                            ></Button>
                </StackPanel>
        </StackPanel>

    </Grid>
</Window>
