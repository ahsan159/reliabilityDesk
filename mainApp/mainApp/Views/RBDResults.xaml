<Window x:Class="mainApp.Views.RBDResults"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mainApp.Views" xmlns:viewmodels="clr-namespace:mainApp.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:PrismShellViewModel}"
        mc:Ignorable="d"
        Title="RBDResults" Height="450" Width="400"
        WindowStartupLocation="CenterScreen"        
        >
    <Grid>
        <Grid.Resources>
            <Style TargetType="Button" x:Key="buttonStyle">
                <Setter Property="Width" Value="50"></Setter>
                <Setter Property="Margin" Value="50 5 50 5"></Setter>
                <Setter Property="FontSize" Value="12"></Setter>
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" 
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   >
            <Label
                FontSize="24"
                FontWeight="Bold"
                >
                Reliability Block Diagram Results
            </Label>
        </DockPanel>
        <DataGrid x:Name="dataTableDisplay"
                  Margin="5 0"
                  Grid.Row="1"
                  ItemsSource="{Binding}"
                  AutoGenerateColumns="False"                  
                  IsReadOnly="True"
                  >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Sr No."
                                    Width="40"
                                    Binding="{Binding Path=SrNo}"                                    
                                    >
                </DataGridTextColumn>
                <DataGridTextColumn Header="Unit"
                                    Width="*"
                                    Binding="{Binding Path=Unit}"
                                    >
                </DataGridTextColumn>
                <DataGridTextColumn Header="Configuration"
                                    Width="*"
                                    Binding="{Binding Path=Configuration}"
                                    >
                </DataGridTextColumn>
                <DataGridTextColumn Header="Reliability"
                                    Width="*"
                                    Binding="{Binding Path=Reliability}"
                                    >
                </DataGridTextColumn>
            </DataGrid.Columns>


        </DataGrid>
        <DockPanel Grid.Row="2"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   >
            <Button Style="{StaticResource buttonStyle}"
                    Click="Button_Click_1"
                    >
                <StackPanel Orientation="Vertical"
                            Margin="0"
                            >
                    <Image 
                        Width="20"                        
                        Margin="0"
                        Source="pack://application:,,,/Resources/Images/Print.png"></Image>
                    <Label Content="Print" HorizontalAlignment="Center"></Label>
                </StackPanel>
            </Button>
            <Button Style="{StaticResource buttonStyle}"
                    Click="Button_Click"
                    >
                <StackPanel Orientation="Vertical"
                            Margin="0"
                            >
                    <Image 
                        Width="20"
                        Margin="0"
                        Source="pack://application:,,,/Resources/Images/Close.png"></Image>
                    <Label Content="Close" HorizontalAlignment="Center"></Label>
                </StackPanel>
            </Button>
        </DockPanel>
    </Grid>
</Window>
